#!/usr/bin/env bash

set -e

find . -type f                \
    | grep -vF .git           \
    | grep -vF modify         \
    | grep -vF vendor/        \
    | xargs -I'{}' bash -c "  \
    sed -i 's|[фФ]ункция|йопта|Ig'                      '{}'     &&    \
    sed -i 's|[вВ]озврат|отвечаю|Ig'                    '{}'     &&    \
    sed -i 's|[вВ]ызватьисключение|пнх|Ig'              '{}'     &&    \
    sed -i 's|[еЕ]сли|вилкойвглаз|Ig'                   '{}'     &&    \
    sed -i 's|[дД]ля|го|Ig'                             '{}'     &&    \
    sed -i 's|[пП]рервать|харэ|Ig'                      '{}'     &&    \
    sed -i 's|[пП]родолжить|двигай|Ig'                  '{}'     &&    \
    sed -i 's|[иИ]з|чоунастут|Ig'                       '{}'     &&    \
    sed -i 's|[иИ]наче|иливжопураз|Ig'                  '{}'     &&    \
    sed -i 's|[иИ]стина|чотко|Ig'                       '{}'     &&    \
    sed -i 's|[лЛ]ожь|нечотко|Ig'                       '{}'     &&    \
    sed -i 's|[нН]еопределено|порожняк|Ig'              '{}'     &&    \
    sed -i 's|[мМ]одуль|клеенка|Ig'                     '{}'     &&    \
    sed -i 's|[пП]опытка|хапнуть|Ig'                    '{}'     &&    \
    sed -i 's|[иИ]сключение|гоп|Ig'                     '{}'     &&    \
    sed -i 's|[вВ]ыбор|естьчо|Ig'                       '{}'     &&    \
    sed -i 's|[кК]огда|аеслинайду|Ig'                   '{}'     &&    \
    sed -i 's|[дД]ругое|апохуй|Ig'                      '{}'     &&    \
    sed -i 's|[сС]тарт|ассо|Ig'                         '{}'     &&    \
    sed -i 's|[пП]араллельно|пацансделал|Ig'            '{}'     &&    \
    sed -i 's|[кК]анал|петух|Ig'                        '{}'     &&    \
    sed -i 's|[нН]овый|захуярить|Ig'                    '{}'     &&    \
    sed -i 's|[иИ]ли|иличо|Ig'                          '{}'     &&    \
    sed -i 's|[кК]онеццикла|стопэжы|Ig'                 '{}'     &&    \
    sed -i 's|[кК]онецесли|стопэвилкойвглаз|Ig'         '{}'     &&    \
    sed -i 's|[кК]онецфункции|стопэйопта|Ig'            '{}'     &&    \
    sed -i 's|[кК]онецпопытки|стопэхапать|Ig'           '{}'     &&    \
    sed -i 's|[кК]онецвыбора|стопэестьчо|Ig'            '{}'     &&    \
    sed -i 's|[тТ]огда|атоэто|Ig'                       '{}'     &&    \
    sed -i 's|[цЦ]икл|жы|Ig'                            '{}'     &&    \
    sed -i 's|[кК]аждого|пероподребро|Ig'               '{}'     &&    \
    sed -i 's|[пП]ока|потрещим|Ig'                      '{}'     &&    \
    sed -i 's|[иИ]начеесли|иличобля|Ig'                 '{}'           \
"
